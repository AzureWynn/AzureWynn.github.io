---
import Layout from '../../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';

const BASE_URL = import.meta.env.BASE_URL;

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    return !data.draft;
  });
  
  return posts.map(post => {
    return {
      params: { slug: post.id.replace(/\.md$/, '') },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description} type="article">
  <article>
    <header class="mb-8">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{post.data.title}</h1>
      <div class="flex flex-wrap items-center gap-4 text-gray-600 dark:text-gray-400 text-sm">
        <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('zh-CN', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
      </div>
      <div class="flex flex-wrap gap-2 mt-4">
        {post.data.tags.map((tag) => (
          <a 
            href={`${BASE_URL}tags/${encodeURIComponent(tag)}`} 
            class="bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-sm px-3 py-1 rounded hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
          >
            {tag}
          </a>
        ))}
      </div>
    </header>
    
    <div class="prose prose-lg dark:prose-invert max-w-none">
      <Content />
    </div>
    
    <footer class="mt-12 pt-6 border-t border-gray-200 dark:border-gray-700">
      <div class="flex justify-between items-center">
        <a href="${BASE_URL}posts" class="text-blue-600 hover:underline">&larr; 返回文章列表</a>
      </div>
    </footer>
  </article>
  
  <!-- Comments Section -->
  <div class="mt-16">
    <h2 class="text-2xl font-bold mb-6">Comments</h2>
    <script 
      src="https://giscus.app/client.js"
      data-repo="AzureWynn/AzureWynn.github.io"
      data-repo-id="R_kgDOJ7oLUA"
      data-category="General"
      data-category-id="DIC_kwDOJ7oLUM4CXeU9"
      data-mapping="pathname"
      data-strict="0"
      data-reactions-enabled="1"
      data-emit-metadata="0"
      data-input-position="bottom"
      data-theme="preferred_color_scheme"
      data-lang="en"
      crossorigin="anonymous"
      async>
    </script>
  </div>
</Layout>
