---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const categoryPosts = allPosts.filter(post => post.data.category === '文章' && !post.data.draft).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="文章 - 技术博客">
  <main class="max-w-6xl mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-4xl md:text-5xl font-bold mb-8 bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 bg-clip-text text-transparent">
        文章
      </h1>
      <p class="text-gray-600 dark:text-gray-400 mb-8">
        分享技术见解和实践经验
      </p>
    </div>

    <div class="space-y-6">
      {categoryPosts.length === 0 ? (
        <p class="text-gray-500 dark:text-gray-400 text-center py-12">
          暂无文章内容
        </p>
      ) : (
        categoryPosts.map((post) => (
          <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-200 dark:border-gray-700">
            <a href={`/posts/${post.id.replace(/\.md$/, '')}`} class="block p-6">
              <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-2">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('zh-CN')}
                </time>
                {post.data.tags.length > 0 && (
                  <>
                    <span>•</span>
                    <div class="flex gap-1">
                      {post.data.tags.map(tag => (
                        <span class="px-2 py-0.5 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded-full text-xs">
                          {tag}
                        </span>
                      ))}
                    </div>
                  </>
                )}
              </div>
              
              <h2 class="text-2xl font-bold mb-2 text-gray-900 dark:text-white hover:text-green-600 dark:hover:text-green-400 transition-colors">
                {post.data.title}
              </h2>
              
              {post.data.description && (
                <p class="text-gray-600 dark:text-gray-400 line-clamp-2">
                  {post.data.description}
                </p>
              )}
            </a>
          </article>
        ))
      )}
    </div>
  </main>
</Layout>
