---
import Layout from '../../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';

const BASE_URL = import.meta.env.BASE_URL;

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  
  return projects.map(project => {
    return {
      params: { slug: project.id.replace(/\.md$/, '') },
      props: { project },
    };
  });
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout title={project.data.title} description={project.data.description} type="article">
  <article>
    <header class="mb-8">
      <h1 class="text-3xl font-bold mb-4">{project.data.title}</h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-6">{project.data.description}</p>
      
      <div class="flex flex-wrap items-center gap-4 text-gray-600 dark:text-gray-400 text-sm mb-4">
        <time datetime={project.data.pubDate.toISOString()}>
          发布于 {project.data.pubDate.toLocaleDateString('zh-CN', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        {project.data.eventDate && (
          <>
            <span>•</span>
            <time datetime={project.data.eventDate.toISOString()}>
              活动于 {project.data.eventDate.toLocaleDateString('zh-CN', { year: 'numeric', month: 'long', day: 'numeric' })}
            </time>
          </>
        )}
      </div>
      
      <div class="flex flex-wrap gap-2 mb-6">
        {project.data.tags.map((tag) => (
          <a 
            href={`/tags/${encodeURIComponent(tag)}`} 
            class="bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-sm px-3 py-1 rounded hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
          >
            {tag}
          </a>
        ))}
      </div>
      
      <div class="flex gap-4">
        {project.data.projectUrl && (
          <a 
            href={project.data.projectUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors"
          >
            访问项目
          </a>
        )}
        {project.data.githubUrl && (
          <a 
            href={project.data.githubUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="bg-gray-800 text-white px-6 py-2 rounded-lg hover:bg-gray-900 transition-colors"
          >
            GitHub
          </a>
        )}
      </div>
    </header>
    
    <div class="prose prose-lg dark:prose-invert max-w-none">
      <Content />
    </div>
    
    <footer class="mt-12 pt-6 border-t border-gray-200 dark:border-gray-700">
      <div class="flex justify-between items-center">
        <a href="${BASE_URL}projects" class="text-blue-600 hover:underline">&larr; 返回项目列表</a>
      </div>
    </footer>
  </article>
  
  <!-- Comments Section -->
  <div class="mt-16">
    <h2 class="text-2xl font-bold mb-6">Comments</h2>
    <script 
      src="https://giscus.app/client.js"
      data-repo="AzureWynn/AzureWynn.github.io"
      data-repo-id="R_kgDOJ7oLUA"
      data-category="General"
      data-category-id="DIC_kwDOJ7oLUM4CXeU9"
      data-mapping="pathname"
      data-strict="0"
      data-reactions-enabled="1"
      data-emit-metadata="0"
      data-input-position="bottom"
      data-theme="preferred_color_scheme"
      data-lang="en"
      crossorigin="anonymous"
      async>
    </script>
  </div>
</Layout>
